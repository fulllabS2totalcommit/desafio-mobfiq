<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_item"
    android:layout_width="190dp"
    android:layout_height="330dp"
    android:layout_margin="5dp"
    android:elevation="16dp"
    cardview:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:id="@+id/tv_discount"
            android:paddingTop="7dp"
            android:textColor="#fff"
            android:textAlignment="center"
            android:background="@drawable/circle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="@string/n_off"/>

        <com.android.volley.toolbox.NetworkImageView
            android:layout_marginTop="60dp"
            android:scaleType="fitXY"
            android:id="@+id/iv_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:contentDescription="@string/productImageContentDescription" />

        <ProgressBar
            android:layout_marginTop="20dp"
            android:id="@+id/progressbar_product"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="120dp" />

        <TextView
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:layout_below="@+id/iv_thumbnail"
            android:id="@+id/tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/product_name"
            android:textStyle="bold"
            android:ellipsize="end"
            android:textSize="18sp"/>

        <TextView
            android:layout_centerInParent="true"
            android:layout_below="@+id/tv_product_name"
            android:text="@string/list_price"
            android:id="@+id/tv_list_price"
            android:textColor="@android:color/darker_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"/>

        <TextView
            android:layout_centerInParent="true"
            android:layout_below="@+id/tv_list_price"
            android:text="@string/price_"
            android:id="@+id/tv_final_price"
            android:textColor="@android:color/holo_green_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"/>

        <TextView
            android:layout_centerInParent="true"
            android:text="@string/opcao_parcel"
            android:layout_below="@+id/tv_final_price"
            android:id="@+id/tv_installment_option"
            android:textColor="@android:color/holo_green_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>